{
if (($zammad{'status'} || 'disabled') eq 'enabled'){
my $vhost = $zammad{VirtualHost} || 'zammad.'.$DomainName;

$OUT .=<<"EOF";
<VirtualHost *:80>
    IncludeOptional conf.d/default-virtualhost.inc
</VirtualHost>

<VirtualHost *:80>
    ServerName zammad.domain.local
    RedirectMatch 301 ^(?!/.well-known/acme-challenge/).* https://zammad.domain.local
</VirtualHost>

<VirtualHost *:443>
    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3
    SSLCipherSuite EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH

    # CSRF token fix - thanks to CptCharlesG
    RequestHeader set X_FORWARDED_PROTO 'https'
    RequestHeader set X-Forwarded-Ssl on

    # replace 'localhost' with your fqdn if you want to use zammad from remote
    ServerName zammad.domain.local

    ## don't loose time with IP address lookups
    HostnameLookups Off

    ## needed for named virtual hosts
    UseCanonicalName Off

    ## configures the footer on server-generated documents
    ServerSignature Off
    ProxyRequests Off
    ProxyPreserveHost On

    ProxyPass / http://localhost:8080/
    ProxyPassReverse / http://localhost:8080/
</VirtualHost>
EOF
}
else {
    $OUT .=<<'EOF';

# Zammad is disabled
# You can enable it with
# config setprop zammad status enabled
# signal-event nethserver-zammad-update

EOF
}

}
